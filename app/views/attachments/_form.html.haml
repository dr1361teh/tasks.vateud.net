= simple_form_for(@attachment) do |f|
  = f.error_notification
  .form-inputs.task-form
    .row
      .span8
        = f.input :name, :input_html => { :class => 'span7' }
      

    -unless @edit == true
      .row
        .span8
          = f.input :upload, :input_html => { :class => 'span7' }
    
    = f.hidden_field :task_id
    
    .row
      .span8
        = f.button :submit, :class => "btn btn-primary"
        = link_to 'Cancel', task_path(@task), :class => "btn"

